<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:osmand="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:id="@+id/map_bottom_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_content_padding"
    android:paddingRight="@dimen/list_content_padding"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/map_bottom_button_configure_map_view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/map_world_globe_dark"/>

        <net.osmand.plus.widgets.TextViewEx
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/default_list_text_size"
            osmand:typeface="@string/font_roboto_medium"
            android:text="@string/configure_map"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_bottom_button_search_view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/map_search_dark"/>

        <net.osmand.plus.widgets.TextViewEx
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/default_list_text_size"
            osmand:typeface="@string/font_roboto_medium"
            android:text="@string/map_widget_search"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_bottom_button_hide_view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <net.osmand.plus.widgets.TextViewEx
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/default_list_text_size"
            osmand:typeface="@string/font_roboto_medium"
            android:text="@string/shared_string_hide"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_bottom_button_route_view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/map_directions"/>

        <net.osmand.plus.widgets.TextViewEx
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/default_list_text_size"
            osmand:typeface="@string/font_roboto_medium"
            android:text="@string/layer_route"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_bottom_button_location_view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/map_my_location"/>

        <net.osmand.plus.widgets.TextViewEx
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/default_list_text_size"
            osmand:typeface="@string/font_roboto_medium"
            android:text="@string/where_am_i"/>

    </LinearLayout>

</LinearLayout>